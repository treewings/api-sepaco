{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": { "@/*": ["*"] },
    "sourceMap": true,
    "outDir": "./build", 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["esnext"],
    "resolveJsonModule": true
  }
}
